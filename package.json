{
  "name": "mern_tutorial",
  "version": "1.0.0",
  "description": "ecommerce application built with MERN stack",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node backend/server.js",
    "server": "nodemon backend/server.js",
    "client": "npm start --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "data:import": "node backend/seeder",
    "data:destroy": "node backend/seeder -d",
    "build": "npm install && npm install --prefix frontend && npm run build --prefix frontend"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rgottiparthi/MERN_Tutorial.git"
  },
  "author": "Rohith Gottiparthi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rgottiparthi/MERN_Tutorial/issues"
  },
  "homepage": "https://github.com/rgottiparthi/MERN_Tutorial#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^5.0.0-beta.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.0.1",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "dotenv": "^16.4.5",
    "nodemon": "^3.1.0"
  }
}
